{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": [1, "double"],
        "linebreak-style": ["error", "windows"],
        "no-unused-vars": [1],
        "no-trailing-spaces": [0],
        "eol-last": [0],
        "no-console": "off",
        "indent": [1, 4],
        "no-tabs": "off"
    }
}
